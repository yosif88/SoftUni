{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/${fileBasename}", // Run the currently opened file
            "preLaunchTask": "tsc: build - tsconfig.json", // Transpile the files
            "outFiles": [
                "${workspaceFolder}/out/**/*.js" // Look for the transpiled files in /out dir
            ]
        }
    ]
}